{
    "name": "lazap",
    "version": "0.0.0-alpha",
    "description": "A cross platform launcher - All your games at one library",
    "main": "./index.js",
    "scripts": {
        "start": "electron .",
        "build": "IF exist \"dist\" ( rmdir /s /q dist && electron-builder build ) ELSE ( electron-builder build )",
        "build:dev": "IF exist \"dist\" ( rmdir /s /q dist && electron-builder build --dir ) ELSE ( electron-builder build --dir )"
    },
    "build": {

        "productName": "Lazap",
        "forceCodeSigning": true,
        "nsis": {
            "license": "./LICENSE.md",
            "runAfterFinish": false,
            "uninstallDisplayName": "Lazap",
            "oneClick": false,
            "perMachine": false,
            "publish": {
                "provider": "github",
                "releaseType": "draft",
                "repo": "lazap",
                "owner": "LegItMate"
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DashCruft-Nation/lazap.git"
    },
    "author": "Lazap Development",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/DashCruft-Nation/lazap/issues"
    },
    "homepage": "https://github.com/DashCruft-Nation/lazap#readme",
    "dependencies": {
        "axios": "^0.24.0",
        "deepmerge": "^4.2.2",
        "discord-rpc": "^4.0.1",
        "electron-log": "^4.4.5",
        "electron-updater": "^4.6.1",
        "jsdom": "^19.0.0",
        "md5": "^2.3.0",
        "open-term": "^2.0.4",
        "v8-compile-cache": "^2.3.0"
    },
    "devDependencies": {
        "electron": "^16.0.4",
        "electron-builder": "^22.14.5",
        "eslint": "8.6.0"
    }
}
